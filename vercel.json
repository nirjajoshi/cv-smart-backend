{
    "version": 2,
    "builds": [
      {
        "src": "src/index.js",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 10, 
          "memory": 1024     
        }
      }
    ],
    "functions": {
      "src/api/*.js": {
        "maxDuration": 300,       
        "memory": 1024      
      }
    },
    "rewrites": [
      { 
        "source": "/(.*)", 
        "destination": "/src" 
      }
    ]
  }
  